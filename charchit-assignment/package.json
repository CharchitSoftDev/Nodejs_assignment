{
	"name": "nest-bp",
	"version": "1.78.0",
	"description": "",
	"author": "",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"prebuild": "rimraf dist",
		"container:init": "docker compose up",
		"container:run": "docker exec -it nest-bp /bin/sh",
		"container:run:bash": "docker exec -it nest-bp /bin/bash",
		"container:rebuild": "docker compose down && docker image rm nest-bp && docker compose up",
		"container:db:init": "docker exec -it nest-bp npm run db:init",
		"db:init": "npm run migrate && npm run seed",
		"seed": "ts-node prisma/scripts/permissions.seeder.ts",
		"migrate": "npx prisma migrate deploy",
		"migrate:new": "npx prisma migrate dev",
		"migrate:applied": "npx prisma migrate resolve --applied \"20240823113121_password_relation_user\"",
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "npm run migrate && node dist/src/main",
		"generate": "nest generate "
	},
	"dependencies": {
		"@nestjs/axios": "2.0.0",
		"@nestjs/common": "^9.4.3",
		"@nestjs/core": "^9.4.3",
		"@nestjs/event-emitter": "^2.0.0",
		"@nestjs/jwt": "10.0.1",
		"@nestjs/passport": "9.0.1",
		"@nestjs/platform-express": "^9.4.3",
		"@nestjs/schedule": "^3.0.1",
		"@nestjs/swagger": "6.1.4",
		"@nestjs/terminus": "9.2.1",
		"@nestjs/testing": "^9.4.3",
		"@prisma/client": "^4.13.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/express": "^4.17.13",
		"aws-sdk": "^2.1414.0",
		"axios": "^1.3.3",
		"bcrypt": "^5.1.1",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"commitlint": "^17.4.2",
		"cron-validator": "^1.3.1",
		"dockerode": "^4.0.2",
		"dotenv": "^16.0.3",
		"joi": "^17.8.3",
		"lodash": "^4.17.21",
		"moment": "^2.29.4",
		"nodemailer": "^6.9.4",
		"passport": "^0.6.0",
		"passport-custom": "^1.1.1",
		"passport-github2": "^0.1.12",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"pg": "^8.11.5",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@nestjs/cli": "^9.0.0",
		"@nestjs/schematics": "^9.0.0",
		"@testcontainers/postgresql": "^10.9.0",
		"@types/cron": "^2.0.1",
		"@types/jest": "28.1.8",
		"@types/node": "^16.0.0",
		"@types/nodemailer": "^6.4.9",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"eslint": "^8.0.1",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"jest-mock-axios": "^4.7.3",
		"prettier": "2.8.3",
		"prisma": "^4.13.0",
		"source-map-support": "^0.5.20",
		"supertest": "^6.3.4",
		"testcontainers": "^10.9.0",
		"ts-jest": "^29.1.2",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.1.0",
		"typescript": "^4.7.4",
		"validate-branch-name": "^1.3.0",
		"wiremock": "^3.5.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"testTimeout": 500000,
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^@src/(.*)$": "<rootDir>/$1",
			"^@prisma-service/(.*)$": "<rootDir>/prisma/$1",
			"@configs/(.*)$": "<rootDir>/configs/$1",
			"^@auth/(.*)$": "<rootDir>/auth/$1",
			"@common/(.*)$": "<rootDir>/common/$1",
			"@services/(.*)$": "<rootDir>/services/$1",
			"@constants/(.*)$": "<rootDir>/constants/$1",
			"@health/(.*)$": "<rootDir>/health/$1",
			"@users/(.*)$": "<rootDir>/users/$1",
			"@middleware/(.*)$": "<rootDir>/middleware/$1",
			"@interceptors/(.*)$": "<rootDir>/interceptors/$1",
			"@admin/(.*)$": "<rootDir>/admin/$1"
		}
	},
	"validate-branch-name": {
		"pattern": "^(master|develop){1}$|^(feature|fix|hotfix|release)/[A-Z]{1,}-[0-9]{1,}",
		"errorMsg": "Please follow the branch naming convention, eg: feature/SG-1"
	}
}
